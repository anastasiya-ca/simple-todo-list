<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowBackground">@color/custom_background_color</item>
        <item name="android:typeface">serif</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:checkboxStyle">@style/MyCheckBox</item>
		<item name="android:buttonStyle">@style/MyButton</item>
		<item name="android:imageButtonStyle">@style/MyImageButton</item>
		<item name="android:editTextStyle">@style/MyEditText</item>
		<item name="android:alertDialogStyle">@style/MyAlertDialog</item>   
    </style>
    
    <style name = "MyActionBar" parent = "@android:Widget.Holo.ActionBar">
        <item name="android:background">@color/custom_actionbar_color</item>
        <item name="android:titleTextStyle">@style/MyTitleText</item>
    </style>
    
    <style name = "MyTitleText" parent = "@android:TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/custom_actionbar_text_color</item>
    </style>
    
    <style name = "MyButton" parent = "@android:Widget.Holo.Button">
       	<item name="android:background">@drawable/apptheme_btn_default_holo_light</item>
		<item name="android:minHeight">48dip</item>
		<item name="android:minWidth">64dip</item>
		<item name="android:textColor">@color/custom_actionbar_text_color</item>
    </style>
    
    <style name = "MyImageButton" parent = "@android:Widget.ImageButton">
        <item name="android:background">@drawable/apptheme_btn_default_holo_light</item>
        <item name="android:textColor">@color/custom_actionbar_text_color</item>
    </style>
    
    <style name = "MyCheckBox" parent = "@android:Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/apptheme_btn_check_holo_light</item>
    </style>
    
    <style name = "MyEditText" parent = "@android:Widget.EditText">
        <item name="android:background">@drawable/apptheme_edit_text_holo_light</item>
		<item name="android:textColor">@color/custom_text_color</item>
    </style>
    
    <style name = "MyAlertDialog" parent = "@android:style/Theme.Holo.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
		<item name="android:windowTitleStyle">@style/MyAlertDialogTitle</item>
		<item name="android:borderlessButtonStyle">@style/MyButton</item>
		<item name="android:buttonStyle">@style/MyButton</item>
		<item name="android:buttonBarStyle">@style/MyButtonBar</item>
    </style>
    
    <style name = "MyButtonBar" parent = "@android:style/Holo.Light.ButtonBar.AlertDialog">
        <item name="android:background">@color/custom_button_bar_background_color</item>
    </style>
 
    <style name = "MyAlertDialogTitle">
        <item name="android:background">@color/custom_background_color</item>
        <item name="android:textAppearance">@style/MyAlertDialogTitleText</item>
    </style>
    
    <style name = "MyAlertDialogTitleText" parent = "@android:style/TextAppearance.Holo.DialogWindowTitle" >
        <item name="android:textColor">@color/custom_actionbar_color</item>
    </style>
    
    <style name = "MyCompletedTodo" parent = "@android:attr/textAppearanceListItemSmall">
        <item name="android:textColor">@color/custom_completed_todo_text_color</item>
    </style>
    
    <style name = "MyActiveTodo" parent = "@android:attr/textAppearanceListItemSmall">
        <item name="android:textColor">@color/custom_active_todo_text_color</item>
    </style>

</resources>
